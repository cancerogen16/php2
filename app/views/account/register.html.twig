{% extends "layouts/default.html.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="row"><div class="col">{{ message }}</div></div>
    <div class="row">
        <div class="col-5">
            <form action="/account/register" method="post" class="register-form">
                <div class="mb-3">
                    <label for="name" class="form-label">Логин</label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Логин" required>
                    <span class="field-error">{{ username_err }}</span>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Пароль</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Пароль" required>
                    <span class="field-error">{{ password_err }}</span>
                </div>
                <div class="mb-3">
                    <label for="confirm_password" class="form-label">Подтверждение</label>
                    <input type="password" class="form-control" id="confirm_password" name="confirm_password" placeholder="Подтверждение" required>
                    <span class="field-error">{{ password_err }}</span>
                </div>
                <button type="submit" class="btn btn-primary mb-3">Регистрация</button>
            </form>
        </div>
        <div class="col-7">

        </div>
    </div>
{% endblock %}