<footer class="footer">
    <div class="container">
        <div class="row">
            {% block footer %}
                <div class="footer__left col align-self-center">
                    <h3>{{ "now"|date("Y") }}</h3>
                </div>
                <div class="footer__right col align-self-center d-flex justify-content-end">
                    <h3>PHP. Уровень 2</h3>
                </div>
            {% endblock %}
        </div>
    </div>
</footer>
<div class="modal addToCartModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <a class="btn btn-primary" href="/checkout"><b>Перейти к заказу</b></a>
            </div>
        </div>
    </div>
</div>
